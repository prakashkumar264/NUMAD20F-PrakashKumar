<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/FirstFragment">

    <fragment
        android:id="@+id/FirstFragment"
        android:name="edu.neu.madcourse.numad20f_prakashkumar.FirstFragment"
        android:label="@string/first_fragment_label"
        tools:layout="@layout/fragment_first">

        <action
            android:id="@+id/action_FirstFragment_to_activity_button"
            app:destination="@id/activity_button" />
        <action
            android:id="@+id/action_FirstFragment_to_linkCollector"
            app:destination="@id/linkCollector" />
    </fragment>
    <fragment
        android:id="@+id/SecondFragment"
        android:name="edu.neu.madcourse.numad20f_prakashkumar.SecondFragment"
        android:label="@string/second_fragment_label"
        tools:layout="@layout/fragment_second">

        <action
            android:id="@+id/action_SecondFragment_to_FirstFragment"
            app:destination="@id/FirstFragment" />
    </fragment>
    <activity
        android:id="@+id/activity_button"
        android:name="edu.neu.madcourse.numad20f_prakashkumar.activity_button"
        android:label="activity_button"
        tools:layout="@layout/activity_button" />
    <activity
        android:id="@+id/linkCollector"
        android:name="edu.neu.madcourse.numad20f_prakashkumar.LinkCollector"
        android:label="activity_link_collector"
        tools:layout="@layout/activity_link_collector" />
</navigation>